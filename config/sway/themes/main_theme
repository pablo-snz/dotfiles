# based on Base16 Seti UI
# Author: Appelgriebsch
include $HOME/.config/sway/themes/colors

# some global theme specific variables
set $gtk-theme Catppuccin-Frappe-Standard-Blue-Dark
set $icon-theme kora-light
set $cursor-theme xcursor-breeze
set $gui-font Roboto 12
set $term-font JetBrainsMono Nerd Font 14
# set $gtk-color-scheme prefer-dark
# set $kvantum-theme Catppuccin-Latte-Blue

#$color0
set $background-color $base
#$color6
set $text-color $rosewater
#color1
set $selection-color $overlay0
#color12
set $accent-color $lavender


# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG       Text    Indicator Child Border
# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

